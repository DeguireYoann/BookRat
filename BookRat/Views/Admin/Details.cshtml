@model BookRat.Models.Livre

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Détails du Livre";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">Accueil</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="container">
    <div class="row">
        <div class="card" style="width: 50rem;">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Titre)</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Categorie.Titre) : </strong>@Html.DisplayFor(model => model.Categorie.Titre)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Auteur) : </strong>@Html.DisplayFor(model => model.Auteur)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.NbPages) : </strong>@Html.DisplayFor(model => model.NbPages)</li>
            </ul>
            <div class="card-body py-3">
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
    </div>
</div>


