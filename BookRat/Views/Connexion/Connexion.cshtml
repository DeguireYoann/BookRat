@model BookRat.Models.MembreViewModel

@{
    ViewData["Title"] = "Connexion";
}
<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Home">Accueil</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="container">
    <div class="row">
        <div class="card" style="width: 50rem;">
            <form asp-action="Connexion" class="py-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Courriel" class="control-label"></label>
                    <input asp-for="Courriel" class="form-control" />
                    <span asp-validation-for="Courriel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MotDePasse" class="control-label">Mot de passe</label>
                    <input type="password" asp-for="MotDePasse" class="form-control" />
                    <span asp-validation-for="MotDePasse" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Connexion" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
